version: 1
applications:
- appRoot: ${application_root}
  backend:
    phases:
      build:
        commands:
          - amplifyPush --simple
  frontend:
    phases:
      preBuild:
        commands:
          - ${install_command}
      build:
        commands:
          - ${build_command}
    artifacts:
      baseDirectory: ${base_artifacts_directory}
      files:
        - '**/*'
    cache:
      paths:
        - node_modules/**/*
